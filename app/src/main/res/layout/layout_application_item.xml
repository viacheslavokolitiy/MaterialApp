<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/application_item_margin_left"
    android:layout_marginRight="@dimen/application_item_margin_right"
    android:id="@+id/application_card"
    android:layout_marginTop="@dimen/application_item_margin_top"
    android:layout_marginBottom="@dimen/application_item_margin_bottom"
    app:cardCornerRadius="@dimen/application_item_corner_radius">
    <ImageView
        android:id="@+id/application_icon"
        android:layout_width="wrap_content"
        android:padding="@dimen/application_logo_padding"
        android:background="@android:color/transparent"
        android:layout_margin="@dimen/application_logo_margin"
        android:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content" />
    <org.satorysoft.cotton.ui.widget.RobotoTextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/application_item_text_size"
        android:layout_marginLeft="@dimen/layout_application_item_margin_left"
        android:layout_marginTop="@dimen/layout_application_item_margin_top"
        android:id="@+id/text_application_name"
        android:layout_height="wrap_content" />
</android.support.v7.widget.CardView>